{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Environment */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "types": ["node"],

    /* Module Handling */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Misc */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
